<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bk_at_white"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_expectedDate"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:gravity="center"
                android:background="@mipmap/fg_1_bk_4"
                android:text="距离预产期还有 270 天"
                android:textSize="18sp"
                android:textColor="@color/bk_btn_blue_NO_Pressed"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:background="#ffffff"
                android:layout_marginTop="5dp">
                <com.joanzapata.iconify.widget.IconTextView
                    android:id="@+id/tv_left"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="{fa-chevron-left}"
                    android:textColor="@drawable/bp_selector"
                    android:textSize="16sp"
                    android:clickable="true"/>
                <TextView
                    android:id="@+id/tv_weekAndDay"
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:layout_height="match_parent"
                    android:text="@string/app_name"
                    android:textColor="@color/bk_btn_blue_NO_Pressed"
                    android:textSize="18sp"
                    android:gravity="center"/>
                <com.joanzapata.iconify.widget.IconTextView
                    android:id="@+id/tv_right"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="{fa-chevron-right}"
                    android:textColor="@drawable/bp_selector"
                    android:textSize="16sp"
                    android:clickable="true"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#ffffff"
                android:layout_marginTop="5dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="今日孕期提醒"
                    android:textColor="@color/bk_btn_blue_NO_Pressed"
                    android:textSize="12sp"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/hint_text"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"/>
                <LinearLayout
                    android:id="@+id/checkRemind_item"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:orientation="horizontal"
                    android:clickable="true">
                    <com.joanzapata.iconify.widget.IconTextView
                        android:layout_width="80dp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="{fa-stethoscope}"
                        android:textColor="@color/theme_green"
                        android:textSize="50sp"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:gravity="bottom"
                            android:text="孕期产检提醒"
                            android:textColor="@color/hint_text"
                            android:textSize="12sp"/>
                        <TextView
                            android:id="@+id/checkRemind"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:text="第一次产检提醒:12周"
                            android:textSize="16sp"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/nutritionRecipes_item"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:orientation="horizontal"
                    android:clickable="true">
                    <com.joanzapata.iconify.widget.IconTextView
                        android:layout_width="80dp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="{fa-file-text-o}"
                        android:textColor="@color/theme_green"
                        android:textSize="50sp"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:gravity="bottom"
                            android:text="营养食谱"
                            android:textColor="@color/hint_text"
                            android:textSize="12sp"/>

                        <TextView
                            android:id="@+id/nutritionRecipes"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:text="乌鸡汤"
                            android:textSize="16sp"
                            android:maxLines="1"
                            android:ellipsize="end"
                            />
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/drinkingRemind_item"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:orientation="horizontal"
                    android:clickable="true">
                    <com.joanzapata.iconify.widget.IconTextView
                        android:layout_width="80dp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="{fa-tint}"
                        android:textColor="@color/theme_green"
                        android:textSize="50sp"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:gravity="bottom"
                            android:text="孕期每日八杯水"
                            android:textColor="@color/hint_text"
                            android:textSize="12sp"/>
                        <TextView
                            android:id="@+id/drinkingRemind"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:text="一小时后提醒"
                            android:textSize="16sp"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#ffffff"
                android:layout_marginTop="5dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="近期生理变化"
                    android:textColor="@color/bk_btn_blue_NO_Pressed"
                    android:textSize="12sp"
                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/hint_text"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"/>
                <com.joanzapata.iconify.widget.IconTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="top"
                    android:text="{fa-file-text-o} 宝宝发育变化:"
                    android:textSize="16sp"
                    android:textColor="@color/icon_black"/>
                <TextView
                    android:id="@+id/babyPhysical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:lineSpacingExtra="5dp"
                    />
                <com.joanzapata.iconify.widget.IconTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="top"
                    android:text="{fa-file-text-o} 妈咪生理变化:"
                    android:textSize="16sp"
                    android:textColor="@color/icon_black"/>
                <TextView
                    android:id="@+id/momPhysical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:lineSpacingExtra="5dp"
                    />
            </LinearLayout>
        </LinearLayout>

    </ScrollView>
</LinearLayout>
