<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp"
        android:background="#ffffff">
        <TextView
            android:id="@+id/question_list_topic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/app_name"/>
        <TextView
            android:id="@+id/question_list_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:lineSpacingExtra="5dp"
            android:text="@string/app_name"
            android:textSize="16sp"
            android:textColor="@color/edt_text"
            />
        <TextView
            android:id="@+id/question_list_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="@string/app_name"
            android:textSize="14sp"
            android:maxLines="3"
            android:ellipsize="end"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp">
            <com.joanzapata.iconify.widget.IconTextView
                android:id="@+id/question_list_agree"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="{fa-thumbs-up}·"/>
            <com.joanzapata.iconify.widget.IconTextView
                android:id="@+id/question_list_disagree"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="{fa-thumbs-down}·"/>
            <com.joanzapata.iconify.widget.IconTextView
                android:id="@+id/question_list_comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="{fa-comments-o}"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
