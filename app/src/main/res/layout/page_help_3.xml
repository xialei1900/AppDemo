<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:paddingTop="10dp"
        android:paddingBottom="10dp">
        <ImageView
            android:layout_width="98dp"
            android:layout_height="wrap_content"
            android:src="@mipmap/girl_icon"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="午餐前来一杯，清清肠胃好消化！"
            android:textColor="@drawable/bp_selector"
            android:textSize="16sp"
            android:gravity="center_vertical"
            android:layout_marginRight="10dp"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/hint_text"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="horizontal"
        android:layout_marginTop="40dp">
        <com.joanzapata.iconify.widget.IconTextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="{fa-chevron-left}"
            android:textColor="@color/theme_green"
            android:textSize="16sp"
            android:clickable="true"/>
        <ImageView
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="150dp"
            android:src="@mipmap/cup"
            />
        <com.joanzapata.iconify.widget.IconTextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="{fa-chevron-right}"
            android:textColor="@color/theme_green"
            android:textSize="16sp"
            android:clickable="true"/>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="第三杯水 11:30"
        android:gravity="center"
        android:textSize="25sp"
        android:textColor="@color/bk_btn_blue_NO_Pressed"
        android:layout_marginTop="20dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="在空调房工作了一上午，口渴了吧？赶紧起身走动走动，喝一杯温开水吧！补充流失的水分的同时，还能清清肠胃，准备美美地吃一顿丰富的午餐呢！"
        android:textSize="16sp"
        android:lineSpacingExtra="3dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"/>
    <Button
        android:id="@+id/item_drink_btn_3"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="@dimen/ButtonHeight"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:text="完成"
        style="@style/AppTheme.Button"
        android:gravity="center"
        android:onClick="drinkDone"
        />
    <ImageView
        android:id="@+id/item_drink_done_3"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_gravity="center_horizontal"
        android:src="@mipmap/done"
        android:layout_marginTop="30dp"
        android:visibility="gone"/>
</LinearLayout>